<div class="banner-index">
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>Welcome to</h2>
        <h1>Cocktails</h2>
          <div>
            <%= link_to new_cocktail_path do  %>
            <div class="button button-purple">
              <i class="fa fa-cocktail"></i>
              Add <strong>Cocktail</strong>
            </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mt-3">

    <div class="cards">
      <% @cocktails.each do |cocktail| %>
      <div class="card-category card-pic">
        <%= link_to "#{cocktail.name}", cocktail_path(cocktail), class: "link-to-text" %>
      </div>
      <% end %>
    </div>


















  </div>

