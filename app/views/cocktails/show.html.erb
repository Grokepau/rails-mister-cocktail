<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')"></div>

<div class="container text-white">

  <div class="row">
    <div class="col-6">
      <h2 class="m-3"><strong><%= @cocktail.name %></strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= link_to cocktails_path do%>
        <p class="button button-red">Back to Cocktails</p>
      <% end %>
    </div>
    <div class="col-6">
      <br>
      <p><strong>Ingredients:</strong></p>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-6">
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash ml-2"></i>
      </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-6 offset-6">
    <div class="ml-3">
    <%= link_to new_cocktail_dose_path(@cocktail) do %>
    <p class="button button-purple">Add Ingredients</p>
    <% end %>
    </div>
  </div>
</div>

</div>







