 <h2>Add a dose for <%= @cocktail.name %></h2>
<div class="container">
 <%= simple_form_for([@cocktail, @dose]) do |f| %>
 <%= f.input :name %>
 <%= f.input :ingredient, Ingredient.all %>
 <%= f.submit class: 'btn btn-primary' %>
 <% end %>
 </div>
<div class="container mt-3">
 <%= link_to 'Go Back to Cocktail', cocktail_path(@cocktail), class: 'btn btn-danger' %>
 </div>

